generator client {
  provider = "prisma-client-js"
}

datasource db {  
  provider = "postgres"  
  url      = env("DATABASE_URL")  
}  

model Notes {  
  id    Int     @id @default(autoincrement())  
  title String  
  content String
  studyCards StudyCards[]
}  

enum StudyCardType {
  Card
  TrueOrFalse
}

model StudyCards {
  id    Int     @id @default(autoincrement())  
  subject String
  type StudyCardType
  question String 
  answer String
  noteId Int?
  note   Notes? @relation(fields: [noteId], references: [id], onDelete: Cascade)
}

model Chat {
  id       Int           @id @default(autoincrement())
  title    String
  messages ChatMessage[]
}

model ChatMessage {
  id         Int      @id @default(autoincrement())
  message    String
  thinkingProcess String?
  fromSystem Boolean
  createdAt  DateTime @default(now())
  chatId Int
  chat   Chat @relation(fields: [chatId], references: [id])
}

model Files {
  id         Int      @id @default(autoincrement())
  title    String
  url String
  mimeType String
  createdAt  DateTime @default(now())
  ocrDescription String?
}